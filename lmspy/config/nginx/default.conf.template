# upstream for uWSGI
upstream uwsgi_app {
    server unix:/code/lmshop/uwsgi_app.sock;
}

server {
    listen 80;
    server_name www.lmshop.com lmshop.com;
    return 301 https://$host$request_uri;

    location / {
        include      /etc/nginx/uwsgi_params;
        uwsgi_pass   uwsgi_app;
    }

    location /static/ {
        alias /code/educa/static/;
    }

    location /media/ {
        alias /code/educa/media/;
    }
}

